generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model FilmStock {
  id          Int       @id @unique @default(autoincrement())
  name        String
  maker       FilmMaker @relation(fields: [filmMakerId], references: [id])
  filmMakerId Int
  ISO         Int
  color       Boolean
  size        String    @default("35mm")
  Roll        Roll[]
}

model FilmMaker {
  id        Int         @id @unique @default(autoincrement())
  name      String      @unique
  FilmStock FilmStock[]
  Roll      Roll[]
}

model Roll {
  id           Int       @id @unique @default(autoincrement())
  film         FilmStock @relation(fields: [filmStockId], references: [id])
  maker        FilmMaker @relation(fields: [filmMakerId], references: [id])
  dateStarted  DateTime
  dateFinished DateTime?
  filmStockId  Int
  filmMakerId  Int
  comments     String?
  user         String
}
